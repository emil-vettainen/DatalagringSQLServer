<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Presentation.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Presentation.MAUI"
    xmlns:views="clr-namespace:Presentation.MAUI.Mvvm.Views"
  
    Title="Presentation.MAUI">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" 
        FlyoutItemIsVisible="False"/>

    <!--<ShellContent
        Title="Register"
        ContentTemplate="{DataTemplate views:RegisterPage}"
        Route="RegisterPage" />-->

    <ShellContent
         Title="Home"
         ContentTemplate="{DataTemplate views:HomePage}"
         Route="HomePage" />

    <ShellContent
          Title="Products"
          ContentTemplate="{DataTemplate views:ProductPage}"
          Route="ProductPage" />

    <ShellContent
         Title="Settings"
         ContentTemplate="{DataTemplate views:UserDetailPage}"
         Route="UserDetailPage" />




    <!--<FlyoutItem>
        <ShellContent
            Title="HomePage"
            ContentTemplate="{DataTemplate views:HomePage}"
            Route="HomePage" />
    </FlyoutItem>-->

    <Shell.FlyoutFooter>
        <Button x:Name="SignOutBtn" Text="SignOut" Clicked="SignOutBtn_Clicked" />
    </Shell.FlyoutFooter>

</Shell>
