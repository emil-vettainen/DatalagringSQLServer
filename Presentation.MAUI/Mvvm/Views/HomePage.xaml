<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Presentation.MAUI.Mvvm.Views.HomePage"
             
             xmlns:models="clr-namespace:Presentation.MAUI.Mvvm.Models.UserModels"
             xmlns:viewmodels="clr-namespace:Presentation.MAUI.Mvvm.ViewModels"
             x:DataType="{x:Type viewmodels:HomeViewModel}" >


    <VerticalStackLayout>
        <Label 
            Text="{Binding UserDetailsModel.FirstName, StringFormat='Welcome {0}!'}" FontSize="20"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>